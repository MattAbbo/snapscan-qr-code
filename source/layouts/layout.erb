<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "SnapScan QR Code" %></title>

    <%= stylesheet_link_tag "site", "snapscan" %>
    <%= javascript_include_tag  "https://code.jquery.com/jquery-2.1.4.min.js", "all" %>
  </head>

  <body class="<%= page_classes %>">
    <%= yield %>
  </body>
</html>
